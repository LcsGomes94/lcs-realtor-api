// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PropertyType {
  residential
  condo
}

enum UserType {
  buyer
  realtor
  admin
}

model User {
  id               Int       @id @default(autoincrement())
  name             String
  phone            String
  email            String    @unique
  password         String
  created_at       DateTime  @default(now())
  updated_at       DateTime  @updatedAt
  user_type        UserType
  homes            Home[]
  buyer_messages   Message[] @relation("buyer_message")
  realtor_messages Message[] @relation("realtor_message")

  @@index([email])
  @@map("users")
}

model Home {
  id                  Int          @id @default(autoincrement())
  adress              String
  number_of_bedrooms  Int
  number_of_bathrooms Float
  city                String
  price               Float
  land_size           Float
  property_type       PropertyType
  created_at          DateTime     @default(now())
  updated_at          DateTime     @updatedAt
  images              Image[]
  realtor_id          Int
  realtor             User         @relation(fields: [realtor_id], references: [id])
  messages            Message[]

  @@map("homes")
}

model Image {
  id         Int      @id @default(autoincrement())
  url        String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  home_id    Int
  home       Home     @relation(fields: [home_id], references: [id])

  @@map("images")
}

model Message {
  id         Int    @id @default(autoincrement())
  message    String
  home_id    Int
  home       Home   @relation(fields: [home_id], references: [id])
  realtor_id Int
  realtor    User   @relation("realtor_message", fields: [realtor_id], references: [id])
  buyer_id   Int
  buyer      User   @relation("buyer_message", fields: [buyer_id], references: [id])

  @@map("messages")
}
